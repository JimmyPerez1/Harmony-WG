<%- include('./partials/header.ejs') %>

<section class="relative w-full h-screen overflow-hidden">
  <video autoplay muted loop playsinline class="absolute top-0 left-0 w-full h-full object-cover z-[-1]">
    <source src="/videos/Portfolio_bg.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>

<div class="relative z-10 flex flex-col items-center justify-center h-full text-white text-center px-4">
    <h1 class="text-4xl md:text-6xl font-bold drop-shadow-lg">Welcome to Jimmy’s Portfolio</h1>
    <p class="text-lg md:text-2xl mt-4 drop-shadow-md">Full-stack developer building tech that empowers people and communities.</p>
    <a href="/projects" class="mt-6 px-6 py-3 bg-blue-600 hover:bg-orange-500 text-white font-semibold rounded-lg transition">
      To View Projects
      <br>
      "Click Here" 
    </a>
  </div>
<div class="absolute top-0 left-0 w-full h-full bg-black/50 z-0"></div>
</section>

<section class="bg-white py-16">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold mb-8 text-center">Featured Projects</h2>

    <div class="swiper mySwiper px-6 md:px-12">
  <div class="swiper-wrapper">
    <% featuredProjects.forEach((project) => { %>
      <div class="swiper-slide">
        <div class="bg-white rounded-lg overflow-hidden shadow hover:shadow-lg transition">
          <img src="<%= project.image %>" alt="<%= project.title %>" class="w-full h-64 object-contain rounded-t-lg bg-gray-100" />
          <div class="p-4">
            <h3 class="text-xl font-semibold mb-2"><%= project.title %></h3>
            <p class="text-gray-600 text-sm mb-4"><%= project.description.slice(0, 120) %>...</p>
            <a href="/projects/<%= project._id %>" class="text-indigo-600 hover:text-orange-700">View Details →</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
  <div class="swiper-pagination mt-6"></div>
  </div>
<div class="flex justify-center mt-8">
  <a 
    href="/projects" 
    class="px-6 py-3 bg-blue-600 hover:bg-orange-500 text-white font-semibold rounded-lg transition">
      See More →
  </a>
</div>
  </div>


</section>
<section class="bg-gray-100 py-16">
  <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row items-center gap-8">
    
    <div class="flex-shrink-0">
      <img 
        src="https://i.imgur.com/VRQteT7_d.png?maxwidth=520&shape=thumb&fidelity=high" 
        alt="Jimmy Headshot" 
        class="w-40 h-40 md:w-52 md:h-52 rounded-full object-cover shadow-md"
      />
    </div>

    <div class="text-center md:text-left">
      <h2 class="text-3xl font-bold mb-4">About Me</h2>
      <p class="text-lg text-gray-900 leading-relaxed">
        I'm Jimmy an Army veteran turned full-stack developer. Passionate about building user-first applications that empower people and strengthen communities.
      </p>
 <div class="mt-6 flex justify-center md:justify-start">
  <a 
    href="/about" 
    class="ml-16 md:ml-60 px-6 py-3 bg-blue-600 hover:bg-orange-500 text-white font-semibold rounded-lg transition">
    Learn More →
  </a>
</div>
    </div>
  </div>
</section>

<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
  const swiper = new Swiper(".mySwiper", {
    slidesPerView: 1.25,
    centeredSlides: false,
    loop: false,
    spaceBetween: 30,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      640: {
        slidesPerView: 1.5,
      },
      768: {
        slidesPerView: 2.5,
      },
      1024: {
        slidesPerView: 3.5,
      },
    },
  });
</script>

