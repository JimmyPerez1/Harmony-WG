<%- include('../partials/header.ejs') %>

<div class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow-md rounded-md">
  <h1 class="text-3xl font-bold mb-6 text-gray-800">Add a New Project</h1>

  <form action="/projects" method="POST" class="space-y-6">

    <div>
      <label for="title" class="block text-sm font-medium text-gray-700">Project Title</label>
      <input
        type="text"
        name="title"
        id="title"
        required
        class="mt-1 block w-full border border-gray-300 rounded-md p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <div>
      <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
      <textarea
        name="description"
        id="description"
        rows="4"
        required
        class="mt-1 block w-full border border-gray-300 rounded-md p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500"
      ></textarea>
    </div>

    <div>
      <label for="image" class="block text-sm font-medium text-gray-700">Image URL</label>
      <input
        type="url"
        name="image"
        id="image"
        placeholder="https://example.com/image.png"
        class="mt-1 block w-full border border-gray-300 rounded-md p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <div>
      <label for="technologies" class="block text-sm font-medium text-gray-700">Technologies Used</label>
      <input
        type="text"
        name="technologies"
        id="technologies"
        placeholder="e.g. JavaScript, React, MongoDB"
        class="mt-1 block w-full border border-gray-300 rounded-md p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <div>
      <label for="githubLink" class="block text-sm font-medium text-gray-700">GitHub Repository</label>
      <input
        type="url"
        name="githubLink"
        id="githubLink"
        placeholder="https://github.com/yourproject"
        class="mt-1 block w-full border border-gray-300 rounded-md p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <div>
      <label for="liveLink" class="block text-sm font-medium text-gray-700">Live Demo URL</label>
      <input
        type="url"
        name="liveLink"
        id="liveLink"
        placeholder="https://yourproject.com"
        class="mt-1 block w-full border border-gray-300 rounded-md p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500"
      />
    </div>

    <div class="flex items-center">
      <input
        type="checkbox"
        name="teamProject"
        id="teamProject"
        class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
      />
      <label for="teamProject" class="ml-2 block text-sm text-gray-700">Team Project</label>
    </div>

    <div>
      <label for="tags" class="block text-sm font-medium text-gray-700">Tags (hold Ctrl or Cmd to select multiple)</label>
      <select
        name="tags"
        id="tags"
        multiple
        class="mt-1 block w-full border border-gray-300 rounded-md p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500"
      >
        <option value="SaaS">SaaS</option>
        <option value="AI">AI</option>
        <option value="E-commerce">E-commerce</option>
        <option value="Business Site">Business Site</option>
        <option value="Showcase">Showcase</option>
        <option value="Game">Game</option>
        <option value="Other">Other</option>
      </select>
    </div>

    <div class="text-right">
      <button
        type="submit"
        class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700"
      >
        Create Project
      </button>
    </div>
  </form>
</div>

<%- include('../partials/footer.ejs') %>