<%- include('../partials/header') %>

  <div class="max-w-6xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">All Projects</h1>

    <form method="GET" action="/projects" class="mb-6 flex flex-wrap gap-4 items-center">
      <div>
        <label for="tag" class="block text-sm font-medium text-gray-700">Filter by Tag</label>
        <select name="tag" id="tag" class="mt-1 block w-full border border-gray-300 rounded-md p-2">
          <option <%= selectedTag === 'All' ? 'selected' : '' %>>All</option>
          <% allTags.forEach(tag => { %>
            <option value="<%= tag %>" <%= selectedTag === tag ? 'selected' : '' %>><%= tag %></option>
          <% }) %>
        </select>
      </div>

      <div>
        <label for="tech" class="block text-sm font-medium text-gray-700">Filter by Tech</label>
        <select name="tech" id="tech" class="mt-1 block w-full border border-gray-300 rounded-md p-2">
          <option <%= selectedTech === 'All' ? 'selected' : '' %>>All</option>
          <% allTech.forEach(tech => { %>
            <option value="<%= tech %>" <%= selectedTech === tech ? 'selected' : '' %>><%= tech %></option>
          <% }) %>
        </select>
      </div>

      <button type="submit" class="self-end bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">
        Apply Filters
      </button>
    </form>


        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% projects.forEach(project => { %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-xl">
          
          <% if (project.image) { %>
            <div class="overflow-hidden h-48">
              <img 
                src="<%= project.image %>" 
                alt="<%= project.title %>" 
                class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
              />
            </div>
          <% } %>

          <div class="p-4">
            <h2 class="text-xl font-semibold mb-2">
              <a href="/projects/<%= project._id %>" class="hover:underline"><%= project.title %></a>
            </h2>

            <% if (project.technologies.length) { %>
              <p class="text-sm mb-1 text-gray-700"><strong>Tech:</strong> <%= project.technologies.join(', ') %></p>
            <% } %>

            <% if (project.tags.length) { %>
              <div class="flex flex-wrap gap-1 mt-2">
                <% project.tags.forEach(tag => { %>
                  <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded">
                    <%= tag %>
                  </span>
                <% }) %>
              </div>
            <% } %>

            <a href="/projects/<%= project._id %>" class="inline-block mt-4 text-sm text-indigo-600 hover:underline">
              View Details â†’
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>


<%- include('../partials/footer') %>