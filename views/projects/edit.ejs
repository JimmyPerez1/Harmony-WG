<%- include('../partials/header') %>

  <div class="max-w-3xl mx-auto p-6">
    <h1 class="text-2xl font-bold mb-6">Edit Project</h1>

    <form action="/projects/<%= project._id %>?_method=PUT" method="POST" class="space-y-6">
      <div>
        <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
        <input type="text" name="title" id="title" value="<%= project.title %>" required
          class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
      </div>
      <div>
        <label for="description" class="block text-sm font-medium text-gray-700">Description</label>
        <textarea name="description" id="description" rows="5" required
          class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2"><%= project.description %></textarea>
      </div>

      <div>
        <label for="image" class="block text-sm font-medium text-gray-700">Image URL</label>
        <input type="url" name="image" id="image" value="<%= project.image %>"
          class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
      </div>

      <div>
        <label for="tags" class="block text-sm font-medium text-gray-700">Tags (comma-separated)</label>
        <input type="text" name="tags" id="tags" value="<%= project.tags.join(', ') %>"
          class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
      </div>

      <div>
        <label for="technologies" class="block text-sm font-medium text-gray-700">Technologies (comma-separated)</label>
        <input type="text" name="technologies" id="technologies" value="<%= project.technologies.join(', ') %>"
          class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
      </div>

      <div>
        <button type="submit"
          class="bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700 transition">Save Changes</button>
        <a href="/projects/<%= project._id %>" class="ml-4 text-indigo-600 hover:underline">Cancel</a>
      </div>
    </form>
  </div>

<%- include('../partials/footer') %>