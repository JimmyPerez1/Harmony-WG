<%
  const overlay = (typeof navVariant !== 'undefined' ? navVariant : 'solid') === 'overlay';
%>

<!-- NAV DEBUG: variant=<%= (typeof navVariant !== 'undefined' ? navVariant : 'solid') %>, overlay=<%= overlay %> -->


<nav id="site-nav"
  class="<%= overlay ? 'absolute' : 'fixed solid-nav' %> top-0 left-0 w-full z-50
         <%= overlay
              ? 'bg-transparent text-white'
              : 'bg-emerald-700 text-white shadow-md' %>
         px-6 py-4 flex justify-between items-center transition-colors duration-300">
  <a href="/" class="flex items-center space-x-2">
    <img src="/harmony_logo.png" alt="Harmony Wellness Group Logo" class="w-12 h-12 object-contain"/>
    <span class="text-xl md:text-2xl font-bold tracking-wide">Harmony Wellness Group</span>
  </a>

  <button id="menu-btn" class="md:hidden focus:outline-none" aria-label="Open menu">
    <svg class="h-6 w-6 <%= overlay ? 'text-white' : 'text-white' %>" xmlns="http://www.w3.org/2000/svg" fill="none"
      viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>

  <div id="menu"
       class="hidden flex-col space-y-4 absolute top-16 right-8 bg-green-800/90 p-4 rounded-md
              md:bg-transparent md:static md:flex md:flex-row md:space-y-0 md:space-x-6">
    <a href="/services" class="text-white hover:text-green-300 transition">|| Services |</a>
    <a href="/about" class="text-white hover:text-green-300 transition">| About ||</a>
  </div>
</nav>


<% if (!overlay) { %>
  <style>
    #site-nav.solid-nav {
      background-color: #14532d !important; 
      color: #fff !important;
      border-bottom: 1px solid #0f3e22 !important;
    }
    #site-nav.solid-nav a { color: #fff !important; }
  </style>

  <div id="nav-spacer"></div>
  <script>
    (function () {
      function setSpacer(){
        var n=document.getElementById('site-nav'), s=document.getElementById('nav-spacer');
        if(n&&s){ s.style.height = n.offsetHeight + 'px'; }
      }
      window.addEventListener('load', setSpacer);
      window.addEventListener('resize', setSpacer);
    })();
  </script>
<% } %>

<script>
  (function(){
    var btn=document.getElementById('menu-btn'), menu=document.getElementById('menu');
    if(btn&&menu){ btn.addEventListener('click', function(){ menu.classList.toggle('hidden'); }); }
  })();

  <% if (overlay) { %>
  (function () {
    var nav = document.getElementById('site-nav');
    function onScroll() {
      if (window.scrollY > 20) {
        nav.classList.remove('bg-transparent');
        nav.classList.add('bg-green-900/70','backdrop-blur-md');
      } else {
        nav.classList.add('bg-transparent');
        nav.classList.remove('bg-green-900/70','backdrop-blur-md');
      }
    }
    window.addEventListener('scroll', onScroll); onScroll();
  })();
  <% } %>
</script>